<% cache('alert_message', expires_in: 1.day, race_condition_ttl: 2, skip_digest: true) do %>
  <%# <% if (alert_msg = ContentBlock.find_by_title(ContentBlock::ALERT_MESSAGE)) && !alert_msg.data.blank? %>
  <% if alert_msg = SiteConfiguration.alert_message_enabled %>
    <div class="alert-box">
      <div class="container">
        <i class="fas fa-info-circle" aria-hidden></i> <%= SiteConfiguration.alert_message.html_safe %>
      </div>
    </div>
  <% end %>
<% end %>

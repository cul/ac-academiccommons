<%#
  Overriding blacklight v16.14.1 template.

  - Changes navbar-inverse class to navbar-default
  - Adds links to about, faq, browse
  - Adds cul banner
%>

<header id="header-navbar" role="banner">
  <div class="<%= container_classes %>">
    <div class="row">
      <div class="col-md-8 logo">
        <%= link_to application_name, root_path, class: "navbar-brand" %>
      </div>
      <div class="col-md-4 search-bar">
        <%= render_search_bar %>
      </div>
    </div>
  </div>
</header>

<div id="links-navbar">
  <nav class="navbar navbar-default" role="navigation">
    <div class="<%= container_classes %>">
      <ul class="nav navbar-nav about-links">
        <li><%= link_to t('blacklight.header_links.about'), about_path, 'aria-label': 'About Academic Commons' %></li>
        <li><%= link_to t('blacklight.header_links.collections'), collections_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right user-links">
        <%= render :partial=>'/user_util_links' %>
      </ul>
    </div>
  </nav>
</div>

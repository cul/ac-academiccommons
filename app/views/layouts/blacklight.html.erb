<%#
  Overriding Blacklight v6.14.1 template.

  - template yields to :content if available
  - adding our own body classes
  - overriding this template can be removed when we go to Blacklight v7
%>

<!DOCTYPE html>
<html lang="en" class="no-js">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

    <!-- Mobile viewport optimization h5bp.com/ad -->
    <meta name="HandheldFriendly" content="True">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">

    <!-- Internet Explorer use the highest version available -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Mobile IE allows us to activate ClearType technology for smoothing fonts for easy reading -->
    <!--[if IEMobile]>
      <meta http-equiv="cleartype" content="on">
    <![endif]-->

    <title><%= render_page_title %></title>
    <%= opensearch_description_tag application_name, opensearch_catalog_url(:format => 'xml') %>
    <%= favicon_link_tag %>
    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= content_for(:head) %>
  </head>
  <body class="<%= render_body_class %> <%= controller_path.gsub(/_|\//, '-') %> <%= action_name.gsub(/_/, '-') %>">

  <%= render 'shared/alert_box' %>

  <%= render :partial => 'shared/cul_banner' %>

  <%= render :partial => 'shared/header_navbar' %>

  <%= render partial: 'shared/modal' %>

  <div id="main-container" class="<%= container_classes %>" role="main">
    <%= content_tag :h1, application_name, class: 'sr-only application-heading' %>

    <%= render :partial=>'/flash_msg', layout: 'shared/flash_messages' %>

    <div class="row">
      <%= content_for?(:content) ? yield(:content) : yield %>
    </div>
  </div>

  <%= render partial: 'shared/footer' %>
  </body>
</html>
